<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fafafa">
    <!-- <Button
        android:layout_width="fill_parent"
        android:id="@+id/secondcurrent_buttontop"
        android:layout_height="50dip"
        android:text="@string/secondcurrent"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="#4169e1"/> -->


    <include
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        layout="@layout/default_titlebar"/>

    <EditText
        android:id="@+id/sousuo"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_below="@id/title"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="12dip"
        android:background="@drawable/login_edit_normal"
        android:ems="10"
        android:gravity="center"
        android:hint="搜索"
        android:singleLine="true"
        android:textSize="16sp">
    </EditText>


    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/sousuo">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="#fafafa">
            <!--       <EditText
                      android:layout_width="fill_parent"
                      android:layout_height="0dp" >
                      <requestFocus />
                  </EditText> -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/second_relative1"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/fulian"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/second_relative2"
                        android:layout_height="50dip"
                        android:layout_width="fill_parent"
                        >

                        <Button
                            android:id="@+id/second_buttonbendi"
                            android:layout_height="50dip"
                            android:layout_width="fill_parent"
                            android:drawableLeft="@drawable/main_choose1"
                            android:drawableRight="@drawable/main_choose1"
                            android:background="@drawable/button_music"
                            android:text="本地视频"
                            android:layout_marginBottom="1dip"
                            android:gravity="center|left"
                            android:textSize="18sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/second_relative3"
                        android:layout_height="50dip"
                        android:layout_width="fill_parent"
                        >

                        <Button
                            android:id="@+id/second_buttonnet"
                            android:layout_height="50dip"
                            android:layout_width="fill_parent"
                            android:drawableLeft="@drawable/main_choose1"
                            android:drawableRight="@drawable/main_choose1"
                            android:background="@drawable/button_music"
                            android:text="在线视频"
                            android:layout_marginBottom="1dip"
                            android:gravity="center|left"
                            android:textSize="18sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/second_relative4"
                        android:layout_height="50dip"
                        android:layout_width="fill_parent"
                        >

                        <Button
                            android:layout_height="50dip"
                            android:layout_width="fill_parent"
                            android:drawableLeft="@drawable/main_choose1"
                            android:drawableRight="@drawable/main_choose1"
                            android:background="@drawable/button_music"
                            android:text="我的下载"
                            android:layout_marginBottom="1dip"
                            android:gravity="center|left"
                            android:textSize="18sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/second_relative5"
                        android:layout_height="50dip"
                        android:layout_width="fill_parent"
                        >

                        <Button
                            android:layout_height="50dip"
                            android:layout_width="fill_parent"
                            android:drawableLeft="@drawable/main_choose1"
                            android:drawableRight="@drawable/main_choose1"
                            android:background="@drawable/button_music"
                            android:text="最近播放"
                            android:layout_marginBottom="1dip"
                            android:gravity="center|left"
                            android:textSize="18sp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <!--
        <ImageView
            android:id="@+id/first_imageViewtop"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/main_choose1" />
     -->

</RelativeLayout>
